bgColor = #ecf0f1
txtColor = #3B444F

// force hardware accelerated css
*
  backface-visibility: hidden

html, body
  height: 100%
  width: 100%
  background-color: bgColor
  color: txtColor

::selection
  background-color: #2ecc71
  color: #fff

.segment
  border-radius: 0 !important
  border: none !important
  box-shadow: none !important
